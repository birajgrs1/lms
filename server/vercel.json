{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/api/server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS", "HEAD"]
    }
  ],
  "functions": {
    "api/server.js": {
      "maxDuration": 30,
      "memory": 1024,
      "includeFiles": "uploads/**"
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}