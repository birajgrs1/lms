{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/server.js"
    },
    {
      "src": "/clerk",
      "dest": "/api/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/stripe",
      "dest": "/api/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/health",
      "dest": "/api/server.js",
      "methods": ["GET"]
    }
  ],
  "functions": {
    "api/server.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}